<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/promotion_slide_show_height">

        <android.support.v4.view.ViewPager
            android:id="@+id/promotion_details_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            />

        <me.relex.circleindicator.CircleIndicator
            android:id="@+id/promotion_details_indicator"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/promotion_details_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/promotion_title_padding"
            android:paddingRight="@dimen/promotion_title_padding"
            android:paddingTop="@dimen/promotion_title_padding"
            android:textColor="@color/promotion_title"
            android:textSize="@dimen/promotion_details_title" />

        <TextView
            android:id="@+id/promotion_details_due_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/promotion_details_title"
            android:paddingBottom="@dimen/due_date_padding_bottom"
            android:paddingLeft="@dimen/promotion_title_padding"
            android:paddingRight="@dimen/promotion_title_padding"
            android:textSize="@dimen/promotion_details_due_date" />

        <TextView
            android:id="@+id/promotion_details_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/promotion_details_due_date"
            android:paddingBottom="@dimen/due_date_padding_bottom"
            android:paddingLeft="@dimen/promotion_title_padding"
            android:paddingRight="@dimen/promotion_title_padding"
            android:textSize="@dimen/promotion_details_description" />


    </RelativeLayout>

</LinearLayout>
