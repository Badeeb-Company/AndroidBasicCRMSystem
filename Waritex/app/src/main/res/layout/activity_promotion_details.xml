<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@android:color/black"
        android:layout_height="@dimen/promotion_slide_show_height">

        <android.support.v4.view.ViewPager
            android:id="@+id/promotion_details_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            />

        <me.relex.circleindicator.CircleIndicator
            android:id="@+id/promotion_details_indicator"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/promotion_details_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/promotion_title_padding"
            android:paddingRight="@dimen/promotion_title_padding"
            android:paddingTop="@dimen/promotion_title_padding"
            style="@style/promotion_details_title_text" />

        <TextView
            android:id="@+id/promotion_details_due_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/promotion_details_title"
            android:paddingBottom="@dimen/due_date_padding_bottom"
            android:paddingLeft="@dimen/promotion_title_padding"
            android:paddingRight="@dimen/promotion_title_padding"
            style="@style/promotion_due_date_text"/>

        <TextView
            android:id="@+id/promotion_details_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/promotion_details_due_date"
            android:paddingBottom="@dimen/due_date_padding_bottom"
            android:paddingLeft="@dimen/promotion_title_padding"
            android:paddingRight="@dimen/promotion_title_padding"
            android:paddingTop="30dp"
            android:text="@string/about_label"
            style="@style/promotion_details_about_text" />

        <TextView
            android:id="@+id/promotion_details_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/promotion_details_about"
            android:paddingBottom="@dimen/due_date_padding_bottom"
            android:paddingLeft="@dimen/promotion_title_padding"
            android:paddingRight="@dimen/promotion_title_padding"
            style="@style/promotion_details_description_text" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/top_border"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp">

            <Button
                android:id="@+id/button1"
                style="@style/button_text"
                android:layout_width="@dimen/show_vendors_button_width"
                android:layout_height="@dimen/show_vendors_button_height"
                android:layout_alignParentRight="true"
                android:background="@drawable/red_button"
                android:onClick="onClickShowVendorsBttn"
                android:text="Show Vendors" />
        </RelativeLayout>


    </RelativeLayout>


</LinearLayout>
